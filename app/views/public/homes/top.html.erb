<p id="notice"><%= notice %></p>

<div class="row">
  <h1>研究室予約サイト</h1>
  <div class="col-xs-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>日にち</th>
          <th>予定名</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @schedules.each do |schedule| %>
          <% if schedule.schedule_day >= Date.today %>
           <tr>
              <td><%= link_to schedule.schedule_day, day_path(schedule.schedule_day) %></td>
              <td><%= schedule.name %></td>
              <td><%= schedule.introduction %></td>
           </tr>
          <% end %>
        <% end %>
      </tbody>
     </table>
  </div>

  <div class="col-xs-9">
    <%= month_calendar events: @reservations do |date, reservations| %>
      <% if end_user_signed_in? or admin_signed_in? and date >= Date.today %>
        <%= link_to day_path(date) do %>
          <div class="date-day">
            <%= date.day %>
          </div>
          <div class="seet-count">
            <% if reservations.count != 0 %>
              残り<%= reservation_count(reservations) %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="date-day">
          <%= date.day %>
        </div>
        <div class="seet-count">
          <% if reservations.count != 0 %>
            残り<%= reservation_count(reservations) %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>