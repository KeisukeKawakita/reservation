<div class="row">
  <h1>マイページ</h1>
  <div class="col-xs-7">
    <h4>登録情報
	  <%= link_to "編集する", edit_end_users_path, class: "btn btn-primary" %>
	</h4>
	<table class="table table-striped", border="2">
		<tr>
			<th>氏名</th>
			<th>
				<%= @end_user.name %>
			</th>
		</tr>
		<tr>
			<th>カナ</th>
			<th>
				<%= @end_user.name_kana %>
			</th>
		</tr>
		<tr>
			<th>電話番号</th>
			<th>
				<%= @end_user.telephone_number %>
			</th>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<th>
				<%= @end_user.email %>
			</th>
		</tr>
	</table>
  </div>

  <div class="col-xs-5">
    <table class="table">
        <%= current_end_user.name %>の予約日
        <% @my_reservations.each do |reservation| %>
          <tr>
            <td><%= reservation.start_time.strftime("%Y-%m-%d") %></td>
            <td>
              <% if reservation.time == 0 %>
                13:00~17:00
              <% else %>
                17:00~22:00
              <% end %>
            </td>
            <td><%= link_to 'Destroy',reservation_path(reservation.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
    </table>
  </div>
</div>
